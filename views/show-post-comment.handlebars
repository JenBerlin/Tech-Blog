{{> private-navbar}}

<form class="create-form">
<article class="message">
    <div class="message-header">
      <p>{{post.title}} 
        on
        {{formatDate post.createdAt}}</p>
    </div>
    <div class="message-body">
      <p> {{post.content}}</p>
      {{#each post.comments}}
        <p> {{comment}}</p>
      {{/each}}
    </div>
</article>
</form>