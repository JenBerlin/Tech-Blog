{{> private-navbar}}

<article class="message">
  {{#each postMap}}
    <div class="message-header">
      <p>{{title}} 
        on
        {{formatDate createdAt}}</p>
    </div>
    <div class="message-body">
      <p> {{content}}</p>
    </div>
    <div>
      <button type="submit" id={{id}} name="delete-post" class="delete" aria-label="delete">Delete</button>
      <button type="submit" id={{id}} name="update-post" class="update" aria-label="update">Update</button>
    </div>
  {{/each}}
  <div>
    <a href="/newpost"><button
        id="button-new"
        type="button"
        class="btn btn-dark"
      >+ New Post</button></a>
  </div>
</article>
<script src="./js/delete-post.js"></script>