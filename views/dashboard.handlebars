{{> private-navbar}}

<article class="message">
  {{#each postMap}}

<div class="container my-5">
  <div class="card border border-info m-1">
      <div class="card-header bg-light text-info">
        <div class="container">
          <div class="row">
            <div class="col-md-10">
              <h4 class="mt-2">{{title}}</h4>
            </div>
            <div>
              <p class="text-secondary">
                on
                {{formatDate createdAt}}</p>
            </div>
          </div>  
        </div>
      </div>
     
      <div class="container">
        <div class="card-body px-4">
          <blockquote class="blockquote">
            <p class="mt-3">{{content}}</p>
          </blockquote>
        </div>
      </div>

      <div class="container my-3">
            <div class="col-md-12 text-center">
                <button type="submit" id={{id}} name="delete-post" class="delete btn btn-info m-3 ps-5 px-5" aria-label="delete">Delete</button>
            <button type="submit" id={{id}} name="update-post" class="update btn btn-info m-3 ps-5 px-5" aria-label="update">Update</button>
            </div>
      </div> 
  </div>
</div>    
  {{/each}}

  <div class="container my-3">
        <div class="col-md-12 text-center">
            <a href="/newpost"><button
              id="button-new"
              type="button"
              class="btn btn-info m-3 ps-5 px-5">+ New Post</button>
            </a>
        </div>
  </div> 
</div>
  
</article>
<script src="./js/delete-post.js"></script>