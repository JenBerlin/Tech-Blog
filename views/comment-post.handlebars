{{> private-navbar}}

<div class="container my-5">
  <form class="create-form">
    <article class="message">
      <div class="card border border-info m-1">
        <div class="card-header bg-light text-info">
          <div class="container">
            <div class="row">
              <div class="col-md-10">
                <h4 class="mt-2">{{post.title}}</h4>
              </div>

              <div>
                <p class="text-secondary">
                  on
                  {{formatDate post.createdAt}}</p>
              </div>
            </div>
              <p>Post id: <span id="post-id">{{post.id}}</span></p>
          </div>
        </div>
      
        <div class="container">
          <div class="card-body px-4">
            <blockquote class="blockquote">
              <p class="mt-3">{{post.content}}</p>
            </blockquote>
          </div>
        </div>
      </div>

      <div class="input-group mt-4">
        <span class="input-group-text text-danger">Comment</span>
        <textarea type="text" id="input-comment" class="form-control border border-info" name="comment" aria-label="With textarea" placeholder="..."></textarea>
      </div>

      <div class="container my-2">
        <div class="col-md-12 text-center">
            <button type="submit" name="submit" class="submit btn btn-info m-3 ps-5 px-5 text-light" aria-label="submit">Submit</button>
        </div>
      </div>
    </article>
  </form>
</div>
<script src="../js/comment.js"></script>